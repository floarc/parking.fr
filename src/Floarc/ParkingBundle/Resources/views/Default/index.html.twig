{% extends "FloarcParkingBundle::layout.html.twig" %}

{% block head %}
    
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.min.css"  rel="stylesheet" media="screen" />
{% stylesheets 
    '@FloarcParkingBundle/Resources/public/css/fix_gmap_bootstrap.css' 
%}
    <link rel="stylesheet" href="{{ asset_url }}"  rel="stylesheet" media="screen" />
{% endstylesheets %}
    
{% endblock %}

{% block body %}
    Search Form
    
    <form action="/app_dev.php/search-search" class="search-form" method="post" {{ form_enctype(search_form) }}>
    <div>
    {{ form_errors(search_form.type_annonce) }}
    {{ form_label(search_form.type_annonce) }}
    {{ form_widget(search_form.type_annonce) }}
    </div>
    
    <div>
    {{ form_errors(search_form.type_contrat) }}
    {{ form_label(search_form.type_contrat) }}
    {{ form_widget(search_form.type_contrat) }}
    </div>    

    <div>
    {{ form_errors(search_form.address) }}
    {{ form_label(search_form.address) }}
    {{ form_widget(search_form.address) }}
    </div>    
    
    {{ form_rest(search_form) }}
    {#{ form(search_form) }#}
    <form/>

      <div id="map"></div>
      <div id="legend">You can drag and drop the marker to the correct location</div>
      

{% if pagination is defined %}
    {% include 'FloarcParkingBundle:Search:search.html.twig' %}
{% endif %}
      
     
{% endblock %}


{% block footer_js %}
  
  <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js"></script>
  <script src="{{ asset('/js/bootstrap.js') }}"></script>

{% javascripts
    '../vendor/xilinus/jquery-addresspicker/jquery.ui.addresspicker.js'
    
    '@FloarcParkingBundle/Resources/public/js/search_form.js'
    '@FloarcParkingBundle/Resources/public/js/init_addresspicker.js'
%}
  <script src="{{ asset_url }}"></script>
{% endjavascripts %}

      

{% endblock %}